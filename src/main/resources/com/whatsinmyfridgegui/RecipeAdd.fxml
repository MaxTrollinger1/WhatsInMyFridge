<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.whatsinmyfridgegui.RecipeAddController"
            fitToWidth="true">

    <content>
        <BorderPane>

            <!-- TOP: Blank Title Field -->
            <top>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="20" left="20"/>
                    </padding>
                    <TextField fx:id="nameField"
                               promptText="Recipe Name"
                               style="-fx-font-size:24px; -fx-font-weight:bold;"/>
                </HBox>
            </top>

            <!-- MAIN FORM -->
            <center>
                <VBox spacing="20">
                    <padding>
                        <Insets top="10" right="20" bottom="10" left="20"/>
                    </padding>

                    <!-- Description -->
                    <Label text="Description"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                    <TextArea fx:id="descriptionField"
                              wrapText="true"
                              prefRowCount="3"
                              promptText="Enter a short description..."/>

                    <!-- Ingredients + Add Ingredient -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Ingredients"
                               style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addIngredientButton"
                                text="Add Ingredient"
                                onAction="#onAddIngredient"/>
                    </HBox>
                    <TableView fx:id="ingredientsTable">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="ingNameCol"   text="Ingredient" sortable="false"/>
                            <TableColumn fx:id="ingAmountCol" text="Amount"     sortable="false"/>
                            <TableColumn fx:id="ingActionCol" text=""           sortable="false"/>
                        </columns>
                    </TableView>

                    <!-- Instructions -->
                    <Label text="Instructions:"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                    <TextArea fx:id="instructionsField"
                              wrapText="true"
                              prefRowCount="6"
                              promptText="Step-by-step instructions..."/>

                </VBox>
            </center>

            <!-- BOTTOM: Cancel & Save -->
            <bottom>
                <HBox alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="0" right="20" bottom="20" left="20"/>
                    </padding>
                    <Button text="Cancel"
                            onAction="#onCancel"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Save"
                            styleClass="purple-button"
                            onAction="#onSave"/>
                </HBox>
            </bottom>

        </BorderPane>
    </content>
</ScrollPane>
