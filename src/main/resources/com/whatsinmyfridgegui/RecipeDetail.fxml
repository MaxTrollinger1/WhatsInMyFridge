<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.whatsinmyfridgegui.RecipeDetailController"
            fitToWidth="true">

    <content>
        <BorderPane>

            <!-- TOP: Recipe Name + Edit/Save button -->
            <top>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding><Insets top="20" left="20"/></padding>

                    <!-- View mode -->
                    <Label fx:id="nameLabel"
                           style="-fx-font-size:24px; -fx-font-weight:bold;"
                           visible="true"
                           managed="true"/>

                    <!-- Edit mode -->
                    <TextField fx:id="nameField"
                               style="-fx-font-size:24px; -fx-font-weight:bold;"
                               visible="false"
                               managed="false"/>

                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="toggleEditButton"
                            text="Edit"
                            onAction="#onToggleEdit"/>
                </HBox>
            </top>

            <!-- CENTER: Description, Ingredients, Instructions -->
            <center>
                <VBox spacing="20">
                    <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>

                    <!-- DESCRIPTION -->
                    <Label text="Description"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                    <Label fx:id="descriptionLabel"
                           wrapText="true"
                           visible="true" managed="true"/>
                    <TextArea fx:id="descriptionArea"
                              wrapText="true"
                              prefRowCount="3"
                              visible="false"
                              managed="false"/>

                    <!-- INGREDIENTS + Add button -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Ingredients"
                               style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addIngredientButton"
                                text="Add Ingredient"
                                visible="false"
                                disable="true"
                                onAction="#onAddIngredient"/>
                    </HBox>

                    <TableView fx:id="ingredientsTable"
                               editable="false">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="ingNameCol"   text="Ingredient" sortable="false"/>
                            <TableColumn fx:id="ingAmountCol" text="Amount"     sortable="false"/>
                            <TableColumn fx:id="ingActionCol" text=""           sortable="false"/>
                        </columns>
                    </TableView>

                    <!-- INSTRUCTIONS -->
                    <Label text="Instructions:"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                    <Label fx:id="instructionsLabel"
                           wrapText="true"
                           visible="true" managed="true"/>
                    <TextArea fx:id="instructionsArea"
                              wrapText="true"
                              prefRowCount="6"
                              visible="false"
                              managed="false"/>
                </VBox>
            </center>

            <!-- BOTTOM: Back to recipes list -->
            <bottom>
                <HBox alignment="CENTER_LEFT">
                    <padding><Insets top="0" right="20" bottom="20" left="20"/></padding>
                    <Button text="â† Back"
                            styleClass="purple-button"
                            onAction="#onBackToList"/>
                </HBox>
            </bottom>

        </BorderPane>
    </content>
</ScrollPane>
